<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gridview_selector"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:contentDescription="@string/mepic"
            android:maxHeight="30dp"
            android:maxWidth="30dp"
            android:src="@drawable/icon_mepic" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:textColor="#222"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/img_identify_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:textSize="13sp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10">

        <ImageView
            android:id="@+id/img_acover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/img_picture" />

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_margin="10dp"
            android:background="#78000000"
            android:paddingBottom="4dp"
            android:paddingEnd="9dp"
            android:paddingStart="9dp"
            android:paddingTop="4dp"
            android:textSize="13sp" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:textColor="#222"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_abstract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:ellipsize="end"
        android:lineSpacingExtra="1.5dp"
        android:maxLines="3"
        android:textColor="#777"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_num_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:drawableLeft="@drawable/icon_read"
            android:drawablePadding="@dimen/dp1"
            android:drawableStart="@drawable/icon_read"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_num_eval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:drawableLeft="@drawable/icon_trict"
            android:drawablePadding="@dimen/dp1"
            android:drawableStart="@drawable/icon_trict"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_num_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:drawableLeft="@drawable/icon_nice"
            android:drawablePadding="@dimen/dp1"
            android:drawableStart="@drawable/icon_nice"
            android:gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>